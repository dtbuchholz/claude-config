{
  "permissions": {
    "allow": [
      "Bash(pnpm lint)",
      "Bash(pnpm format)",
      "Bash(pnpm test:*)",
      "Bash(pnpm build)",
      "Bash(pnpm start)",
      "Bash(pnpm vitest)",
      "Bash(pnpm install)",
      "Bash(pnpm run dev)",
      "Bash(pnpm dev)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)",
      "Read(~/.bash_profile)",
      "Read(~/.profile)",
      "Read(~/.config/fish/config.fish)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(jq:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(tail:*)",
      "Bash(head:*)",
      "Bash(tee:*)",
      "Bash(git status)",
      "Bash(git commit)",
      "Bash(git log)",
      "Bash(git diff)",
      "Bash(git add)",
      "Bash(git push)",
      "Bash(git pull)",
      "Bash(git fetch)",
      "Bash(git merge)",
      "Bash(git rebase)",
      "Bash(git reset)",
      "Bash(git revert)",
      "Bash(git cherry-pick)",
      "Bash(git restore)",
      "Bash(git checkout)",
      "Bash(git branch)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json, sys; data=json.load(sys.stdin); path=data.get('tool_input',{}).get('file_path',''); sys.exit(2 if any(p in path for p in ['.env', 'package-lock.json', 'pnpm-lock.yaml', 'yarn.lock', 'bun.lockb', '.git/']) else 0)\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json,sys,subprocess;d=json.load(sys.stdin);proj=d.get('cwd','').split('/')[-1] or 'Claude';msg=d.get('message','Awaiting your input');subprocess.run(['terminal-notifier','-title',f'Claude Code Â· {proj}','-message',msg,'-sound','default','-activate','com.googlecode.iterm2'])\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Task completed' -sound default -activate com.googlecode.iterm2"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "ralph-wiggum@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
