{
  "permissions": {
    "allow": [
      "Bash(pnpm lint)",
      "Bash(pnpm format)",
      "Bash(pnpm test:*)",
      "Bash(pnpm build)",
      "Bash(pnpm start)",
      "Bash(pnpm vitest)",
      "Bash(pnpm install)",
      "Bash(pnpm run dev)",
      "Bash(pnpm dev)",
      "Read(~/.zshrc)",
      "Read(~/.bashrc)",
      "Read(~/.bash_profile)",
      "Read(~/.profile)",
      "Read(~/.config/fish/config.fish)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(jq:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(tail:*)",
      "Bash(head:*)",
      "Bash(tee:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(gh pr view)",
      "Bash(gh pr create)",
      "Bash(gh api)",
      "Bash(git status)",
      "Bash(git commit)",
      "Bash(git log)",
      "Bash(git diff)",
      "Bash(git add)",
      "Bash(git push)",
      "Bash(git pull)",
      "Bash(git fetch)",
      "Bash(git merge)",
      "Bash(git rebase)",
      "Bash(git reset)",
      "Bash(git revert)",
      "Bash(git cherry-pick)",
      "Bash(git restore)",
      "Bash(git checkout)",
      "Bash(git branch)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/check-sensitive-files.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/check-push-main.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json,sys,os,subprocess;d=json.load(sys.stdin);proj=d.get('cwd','').split('/')[-1] or 'Claude';msg=d.get('message','Awaiting your input');subprocess.run([os.path.expanduser('~/.claude/hooks/notify.sh'),f'Claude Code · {proj}',msg])\""
          }
        ]
      },
      {
        "matcher": "plugin",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json,sys,os,subprocess;d=json.load(sys.stdin);proj=d.get('cwd','').split('/')[-1] or 'Claude';msg=d.get('message','Plugin prompt');subprocess.run([os.path.expanduser('~/.claude/hooks/notify.sh'),f'Claude Code · {proj}',msg])\""
          }
        ]
      },
      {
        "matcher": "input",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json,sys,os,subprocess;d=json.load(sys.stdin);proj=d.get('cwd','').split('/')[-1] or 'Claude';msg=d.get('message','Input required');subprocess.run([os.path.expanduser('~/.claude/hooks/notify.sh'),f'Claude Code · {proj}',msg])\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh 'Claude Code' 'Task completed'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "alwaysThinkingEnabled": true
}
